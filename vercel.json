{
  "version": 2,
  "env": {
    "PNPM_NODE_LINKER": "hoisted"
  },
  "builds": [
    { 
      "src": "apps/api/src/server.ts", 
      "use": "@vercel/node",
      "config": {
        "includeFiles": "apps/**/public/**,apps/**/dist/**"
      }
    }
  ],
  "routes": [
    { "src": "/manifest.json", "dest": "/apps/api/src/server.ts" },
    { "src": "/api/(.*)", "dest": "/apps/api/src/server.ts" },
    { "src": "/ui/(.*)", "dest": "/apps/api/src/server.ts" },
    { "src": "/(.*)", "dest": "/apps/api/src/server.ts" }
  ]
}
